import random #importing the random module to generate random numbers
random_number = random.randint(1, 100)#generating a random number between 1 and 100
attempts = 1#starts at 1 due to the first guess being made before the loop
guess = int(input("Guess a number between 1 and 100: "))
while guess != random_number and attempts < 5:#the loop continues until the user guesses the number or reaches 5 attempts
    if guess < random_number:
        print("Too low! Try again.")
    else:
        print("Too high! Try again.")
    guess = int(input("Guess a number between 1 and 100: "))
    attempts += 1# every iteration of the loops counts as an attempt so we increase by 1
if guess == random_number:
    print(f"Congratulations! You've guessed the number {random_number} in {attempts} attempts.")
else:
    print(f"Sorry, you've used all 5 attempts. The number was {random_number}.")
#the bot guess we are going to use a binary search algorithm to guess the number efficiently but we will use a random guess for the first number.
low = 1
high = 100
guesses = 1
bot_guess = random.randint(1, 100)#generate random number
while bot_guess != random_number:
    bot_guess = (low + high) // 2#have the botguess be the middle of the current range
    guesses = guesses+ 1
    if bot_guess < random_number:
        low = bot_guess+1#if the bot guess is too low, we can eliminate all numbers below it
    elif bot_guess > random_number:
        print(f"Bot guessed {bot_guess}. Too high!")
        high = bot_guess-1#if the bot guess is too high, we can eliminate all numbers above it
print(f"Bot guessed the number {random_number} in {guesses} attempts.")
#the average number of guesses will be around 6 as the maximum number of guesses is 8 and the log base 2 of 100 is approximately 6.64   
